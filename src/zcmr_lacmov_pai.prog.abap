MODULE user_command_0100 INPUT.
  CASE sy-ucomm.
    WHEN 'SAVE'.
    WHEN 'BACK' OR 'EXIT' OR 'CANCEL'.
      LEAVE TO SCREEN 0.
    WHEN 'EXP'.
    WHEN 'DRP'.
    WHEN 'DRE'.
    WHEN OTHERS.
  ENDCASE.
ENDMODULE.
